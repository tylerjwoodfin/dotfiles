# Aliases common to all devices

# Use Vim as default
export EDITOR='vim'

# Always ls as list
# alias ls="ls -al"

# Directories
alias cdt='cd ~/Git/dotfiles'

# ../
alias b='cd ../'

# ls when cd
function cd {
    builtin cd "$@" && ls
}

# enable colors ðŸŽ¨
if [ -x /usr/bin/dircolors ]; then
  	test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
 	alias grep='grep --color=auto'
 	alias fgrep='fgrep --color=auto'
 	alias egrep='egrep --color=auto'
 fi

# Git
alias glog="git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
alias gc="git commit -m"
alias gs="git status"
alias gclean='git branch --merged | egrep -v "(^\*|master|dev|main)" | xargs git branch -d'

[ -z "$PS1" ] && return
##
## Aliases below this line won't be called during interactive sessions (e.g. scripts)
##

